MDScreen:
    id: update_profile_page
    name: 'update_profile_page'
    MDFloatLayout:
        md_bg_color: rgba(246, 250, 255, 255)
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .91}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: rgba(71, 92, 119, 255)
            on_release: 
                app.root.current = 'home_page'

        MDLabel: 
            font_name: "./fonts\Poppins\Poppins""-Medium.ttf"
            text: "My Profile"
            font_size: "15sp"
            pos_hint: {"center_x": .56, "center_y": .82}
            color: rgba(71, 92, 119, 255)

        BoxLayout: 
            size: 500, 450
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 15
            spacing: 20
            orientation: 'vertical'

            MDTextFieldRound:
                hint_text: "Your new name"
                id: edit_user
                icon_right: "account"
                size_hint_x: None
                width: 200
                font_size: 14
                pos_hint: {'center_x': .5}
                multiline: False
                text:''
            
            
            MDTextFieldRound:
                hint_text: "Your new password"
                id: profile_password
                icon_right: "eye-off"
                size_hint_x: None
                password: 'True'
                width: 200
                font_size: 14
                pos_hint: {'center_x': .5}
                multiline: False
                text: ''
            
            MDTextFieldRound:
                id: conf_password
                icon_right: "eye-off"
                size_hint_x: None
                password: 'True'
                width: 200
                font_size: 14
                pos_hint: {'center_x': .5}
                multiline: False
                text: ''
            
            MDTextFieldRound:
                hint_text:'I am good at'
                id: good_c1
                required: True
                foreground_color: 1, 0, 1, 1
                size_hint_x: None
                width: 150
                font_size: 15
                pos_hint: {"center_x": 0.5}
                multiline: False
            
            MDTextFieldRound:
                hint_text:'I am good at'
                id: good_c2
                required: True
                foreground_color: 1, 0, 1, 1
                size_hint_x: None
                width: 150
                font_size: 15
                pos_hint: {"center_x": 0.5}
                multiline: False
            
            MDTextFieldRound:
                hint_text:'I am good at'
                id: good_c3
                required: True
                foreground_color: 1, 0, 1, 1
                size_hint_x: None
                width: 150
                font_size: 15
                pos_hint: {"center_x": 0.5}
                multiline: False
            

            MDTextFieldRound:
                hint_text:'I need help with '
                id: bad_b1
                required: True
                foreground_color: 1, 0, 1, 1
                size_hint_x: None
                width: 150
                font_size: 15
                pos_hint: {"center_x": 0.5}
                multiline: False
            
            MDTextFieldRound:
                hint_text:'I need help with '
                id: bad_b2
                required: True
                foreground_color: 1, 0, 1, 1
                size_hint_x: None
                width: 150
                font_size: 15
                pos_hint: {"center_x": 0.5}
                multiline: False
            
            MDFillRoundFlatButton:
                icon: "account-reactivate"
                text: 'Update'
                theme_text_color: "Custom"
                pos_hint: {'center_x': .5}
                on_release:
                    app.update_profile()
                    app.root.current = 'login'

